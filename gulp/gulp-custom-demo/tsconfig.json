{
    "compileOnSave": true, // 保存时重新生成js文件
    "compilerOptions": {
        "target": "ES5", // 生成代码类型
        "module": "commonjs", // 指定生成哪个模块系统代码
        "sourceMap": false, // 用于调试
        "outDir": "dist", // 编译后代码输出目录
        "removeComments": true, // 是否删除注释
        "noImplicitAny": false, // 在表达式和声明上有隐含的'any'类型时报错
        "watch": false, // 在监视模式下运行编译器。会监视输出文件，在它们改变时重新编译
        "allowJs": false, // 是否允许使用js代码
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["dom", "es5", "scripthost", "es6", "es2016.array.include"]
    },
    "include": ["src"],
    "exclude": ["resource", "node_modules", "lib"]
}
